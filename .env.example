# Database
DATABASE_URL="postgresql://user:password@localhost:5432/kametrix"

# Vapi Configuration
VAPI_API_KEY=your_vapi_api_key_here
# Public key for client-side Vapi Web SDK (for voice testing)
VAPI_PUBLIC_KEY=your_vapi_public_key_here
# Webhook signature secret - get from Vapi dashboard > Account > Webhooks
# If set, all webhook requests must have valid x-vapi-signature header
VAPI_WEBHOOK_SECRET=

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# Generate with: openssl rand -hex 32
GOOGLE_ENCRYPTION_KEY=your_32_byte_hex_key_here

# App URL (used for OAuth redirect)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# SMTP Configuration (for email notifications)
SMTP_HOST=mail.yourdomain.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM="Kametrix <noreply@yourdomain.com>"

# ElevenLabs (for voice previews)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_CURRENCY=eur
